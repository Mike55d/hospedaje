{% extends "::base.html.twig" %}

{% block body %}

<div class="row">
	<div class="col-md-10 col-md-offset-1">
		<div class="white-box">
		<div class="panel-body">
			<h1 class="font-bold">Facturas</h1>
			<table class="myTable">
				<thead>
					<tr>
						<th>Id</th>
						<th>Subtotal</th>
						<th>Descuento</th>
						<th>Total</th>
						<th>Tipo de pago</th>
						<th>Caja NÂ°</th>
						<th>Grupo</th>
						<th>Fecha</th>
						<th>Acciones</th>
					</tr>
				</thead>
				<tbody>
					{% for factura in facturas %}
					<tr>
						<td>{{factura.id}}</td>
						<td>{{factura.subtotal}}</td>
						<td>{{factura.descuento}}%</td>
						<td>{{factura.total}}$</td>
						<td>{{factura.tipoPago}}</td>
						<td>{% if factura.caja %}{{factura.caja.nro}} {% else %} Ninguna{% endif %}</td>
						<td>{{factura.grupo.nombre}}</td>
						<td>{{factura.fecha|date('d-m-Y')}}</td>
						<td>
							<a href="" class="btn btn-sm btn-primary">detalles</a>
							{% if factura.tipoPago == 'caja' %}<a href="" class="btn btn-sm btn-info">Reenviar</a>{% endif %}
						</td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
	</div>
</div>
{% endblock %}

{% block javascripts %}
<script>
$('.myTable').DataTable();
</script>
{% endblock %}
