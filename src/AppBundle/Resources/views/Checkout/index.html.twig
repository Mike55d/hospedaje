{% extends "::base.html.twig" %}

{% block body %}
<div class="row">
  <div class="col-md-12">
  </div>
</div>

<div class="row">
	<dov class="col-md-7 col-md-offset-1">
		<div class="white-box">
      <h1 class="font-bold">Checkout</h1>
      <div class="panel">
        <div class="panel-body">
         <table id="table">
          <thead>
           <tr>
            <th></th>
            <th>Tratamiento</th>
            <th>Nombre</th>
            <th>Grupo</th>
            <th>Fecha de nacimiento</th>
            <th></th>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>
</dov>
<dov class="col-md-3">
  <div class="white-box">
    <h2 class="h1 font-bold">Caja</h2>
    <br>
    <h5><span class="font-bold">Email de caja : </span>{{caja.emailCaja}}</h5>
    <h5><span class="font-bold">NÂ° : </span>{{caja.nro}}</h5>
    <h5><span class="font-bold">Responsable : </span>{{caja.responsable}}</h5>
